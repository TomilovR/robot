<?xml version="1.0"?>
<robot name="zhiguli">
  
  <!-- Base Link (lower chassis) -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="1.6 0.7 0.2"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="1.6 0.7 0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="30.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="5.0" ixy="0.0" ixz="0.0" iyy="15.0" iyz="0.0" izz="18.0"/>
    </inertial>
  </link>

  <!-- Hood -->
  <link name="hood">
    <visual>
      <geometry>
        <box size="0.5 0.65 0.25"/>
      </geometry>
      <material name="red">
        <color rgba="0.8 0.1 0.1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.65 0.25"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.5" ixy="0" ixz="0" iyy="1.0" iyz="0" izz="1.2"/>
