  </gazebo>

  <gazebo reference="trunk">
    <material>Gazebo/Red</material>
  </gazebo>

  <gazebo reference="front_bumper">
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="rear_bumper">
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo reference="left_front_wheel">
    <material>Gazebo/Black</material>
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
  </gazebo>

  <gazebo reference="right_front_wheel">
    <material>Gazebo/Black</material>
    <mu1>0.1</mu1>
    <mu2>0.1</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
  </gazebo>

  <gazebo reference="left_rear_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.5</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
  </gazebo>

  <gazebo reference="right_rear_wheel">
    <material>Gazebo/Black</material>
    <mu1>1.5</mu1>
    <mu2>1.0</mu2>
    <kp>1000000.0</kp>
    <kd>100.0</kd>
    <minDepth>0.001</minDepth>
  </gazebo>

  <gazebo reference="left_headlight">
    <material>Gazebo/Yellow</material>
  </gazebo>

  <gazebo reference="right_headlight">
    <material>Gazebo/Yellow</material>
  </gazebo>

  <gazebo reference="left_taillight">
    <material>Gazebo/Red</material>
  </gazebo>

  <gazebo reference="right_taillight">
    <material>Gazebo/Red</material>
  </gazebo>

</robot>
